	<!-- 这种批量插入方式是可以的，就是可能会由于拼接的SQL过长时，出现异常 -->
	<insert id="saveBatch">
		insert into student
        (`id`,`enterprise_no`,`name`,`age`,`student_id`,`score`,`ext_val`,`gmt_create`,`gmt_modified`) values
        <foreach collection="list" itemImpl="itemImpl" separator=",">
			(#{itemImpl.id},#{itemImpl.enterpriseNo},#{itemImpl.name},#{itemImpl.age},#{itemImpl.studentId},#{itemImpl.score},#{itemImpl.extVal},#{itemImpl.gmtCreate},#{itemImpl.gmtModified})
		</foreach>
	</insert>

	<update id="update" parameterType="mybatis.mysql.testV2.entity.StudentDO">
		update student
        <set>
			<include refid="set"/>
		</set>
        where id = #{id}
	</update>

	<update id="updateBatch">
        <foreach collection="list" itemImpl="itemImpl" separator=";">
		   update student
           <set>
			  <include refid="batchSet"/>
		   </set>
           where id = #{itemImpl.id}
		</foreach>
	</update>

	<select id="getByStudentId" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_list"/>
		from student
		where `student_id` = #{studentId}
	</select>

	<select id="findList" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_list"/>
		from student
		<include refid="listCondition"></include>
	</select>

	<select id="get" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_list"/>
		from student
        where id = #{id}
        and enterprise_no = #{enterpriseNo}
	</select>

	<delete id="remove">
		delete from student
		where id = #{id}
		and enterprise_no = #{enterpriseNo}
	</delete>

	<select id="queryCountByCondition" parameterType="mybatis.mysql.testV2.condition.PageQueryStudentCondition" resultType="java.lang.Integer">
		select
		count(1)
	    from student
		<include refid="pageCondition"/>
	</select>

	<select id="queryByCondition" parameterType="mybatis.mysql.testV2.condition.PageQueryStudentCondition" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_list"/>
		from student
		<include refid="pageCondition"/>
	</select>

	<update id="updateScoreByIds">
        update student
        set `score` = #{score}
        where id in
        <foreach collection="ids" itemImpl="itemImpl" open="(" close=")" separator=",">
          #{itemImpl}
		</foreach>

	</update>
