<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mybatis.mysql.testV2.dao.impl.StudentDAOImpl">

	<sql id="Base_Column_list">
		`id`,`name`,`age`,`student_id`,`score`,`ext_val`,`gmt_create`,`gmt_modified`
	</sql>

	<resultMap id="BaseResultMap" type="mybatis.mysql.testV2.entity.StudentDO">
		<id column="id" property="id" />
		<result property="enterpriseNo" column="enterprise_no" />
		<result property="name" column="name" />
		<result property="age" column="age" />
		<result property="studentId" column="student_id" />
		<result property="score" column="score" />
		<result property="extVal" column="ext_val" />
		<result property="gmtCreate" column="gmt_create" />
		<result property="gmtModified" column="gmt_modified" />
	</resultMap>

	<sql id="set">
        <if test="id != null">
			`id` = #{id},
		</if>
		<if test="enterpriseNo != null">
			`enterprise_no` = #{enterpriseNo},
		</if>
		<if test="name != null">
			`name` = #{name},
		</if>
		<if test="age != null">
			`age` = #{age},
		</if>
		<if test="studentId != null">
			`student_id` = #{studentId},
		</if>
		<if test="score != null">
			`score` = #{score},
		</if>
        <if test="extVal != null">
			`ext_val` = #{extVal},
		</if>
		<if test="gmtCreate != null">
			`gmt_create` = #{gmtCreate},
		</if>
		<if test="gmtModified != null">
			`gmt_modified` = #{gmtModified},
		</if>
	</sql>

	<sql id="batchSet">
        <if test="item.id != null">
			`id` = #{item.id},
		</if>
		<if test="item.enterpriseNo != null">
			`enterprise_no` = #{item.enterpriseNo},
		</if>
		<if test="item.name != null">
			`name` = #{item.name},
		</if>
		<if test="item.age != null">
			`age` = #{item.age},
		</if>
		<if test="item.studentId != null">
			`student_id` = #{item.studentId},
		</if>
		<if test="item.score != null">
			`score` = #{item.score},
		</if>
        <if test="item.extVal != null">
			`ext_val` = #{item.extVal},
		</if>
		<if test="item.gmtCreate != null">
			`gmt_create` = #{item.gmtCreate},
		</if>
		<if test="item.gmtModified != null">
			`gmt_modified` = #{item.gmtModified},
		</if>
	</sql>

	<sql id="pageCondition">
         <trim prefix="where" suffixOverrides="and | or">
            <if test="_parameter instanceof mybatis.mysql.testV2.condition.PageQueryStudentCondition">
                <if test="enterpriseNo != null">
			        `enterprise_no` = #{enterpriseNo} and
		        </if>
		        <if test="name != null">
			        `name` = #{name} and
		        </if>
			</if>
		 </trim>

		 <if test="orderBy != null and orderBy != '' ">
			 order by ${orderBy}
		 </if>
		 <if test="offset!=null and limit!=null">
            limit #{ offset },#{ limit }
        </if>
        <if test="limit!=null and offset==null">
            limit #{ limit }
        </if>
	</sql>

	<sql id="listCondition">
         <trim prefix="where" suffixOverrides="and | or">
            <if test="_parameter instanceof mybatis.mysql.testV2.condition.ListQueryCondition">
                <if test="enterpriseNo != null">
			        `enterprise_no` = #{enterpriseNo} and
		        </if>
		        <if test="name != null">
			        `name` = #{name} and
		        </if>
			</if>
		 </trim>
	</sql>

	<insert id="save" parameterType="mybatis.mysql.testV2.entity.StudentDO">
	    insert student
	    <set>
			<include refid="set"/>
		</set>
	</insert>

	<insert id="saveBatch">
        <foreach collection="list" item="item" index="index" separator=";">
		   insert student
		   <set>
			  <include refid="batchSet"/>
		   </set>
		</foreach>
	</insert>

	<!-- 这种批量插入方式是可以的 -->
<!--	<insert id="saveBatch">-->
<!--		insert into student-->
<!--        (`id`,`enterprise_no`,`name`,`age`,`student_id`,`score`,`ext_val`,`gmt_create`,`gmt_modified`) values-->
