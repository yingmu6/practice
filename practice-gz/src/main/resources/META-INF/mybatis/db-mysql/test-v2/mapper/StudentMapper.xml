<!--			(#{item.id},#{item.enterpriseNo},#{item.name},#{item.age},#{item.studentId},#{item.score},#{item.extVal},#{item.gmtCreate},#{item.gmtModified})-->
<!--		</foreach>-->
<!--	</insert>-->

	<update id="update" parameterType="mybatis.mysql.testV2.entity.StudentDO">
		update student
        <set>
			<include refid="set"/>
		</set>
        where id = #{id}
	</update>

	<update id="updateBatch">
        <foreach collection="list" item="item" separator=";" close=";">
		   update student
           <set>
			  <include refid="batchSet"/>
		   </set>
           where id = #{item.id}
		</foreach>
	</update>

	<select id="getByStudentId" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_list"/>
		from student
		where `student_id` = #{studentId}
	</select>

	<select id="findList" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_list"/>
		from student
		<include refid="listCondition"></include>
	</select>

	<select id="get" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_list"/>
		from student
        where id = #{id}
        and enterprise_no = #{enterpriseNo}
	</select>

	<delete id="remove">
		delete from student
		where id = #{id}
		and enterprise_no = #{enterpriseNo}
	</delete>

	<select id="queryCountByCondition" parameterType="mybatis.mysql.testV2.condition.PageQueryStudentCondition" resultType="java.lang.Integer">
		select
		count(1)
	    from student
		<include refid="pageCondition"/>
	</select>

	<select id="queryByCondition" parameterType="mybatis.mysql.testV2.condition.PageQueryStudentCondition" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_list"/>
		from student
		<include refid="pageCondition"/>
	</select>

	<update id="updateScoreByIds">
        update student
        set `score` = #{score}
        where id in
        <foreach collection="ids" item="item" open="(" close=")" separator=",">
          #{item}
		</foreach>

	</update>
</mapper>
